{
    "include": ["src/**/*"],
    "compilerOptions": {
        "declaration": true,
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",

        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "baseUrl": "./",

        "lib": ["ESNext", "DOM"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "rootDirs": ["./src/"],
        "typeRoots": ["src/@types"]
    },
    "ts-node": {
        "files": true
    }
}
